<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/zero_height</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="review_trailer_button_style">
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/review_trailer_button</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:layout_margin">@dimen/margin_8dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="review_labels">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>

    <style name="review_names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/padding_8dp</item>
    </style>
</resources>
