<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:constraint_referenced_ids="scroll"
    android:layout_width="match_parent"
    android:nestedScrollingEnabled="true"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/review_trailer_button_style"
                android:id="@+id/showTrailers"
                android:text="@string/check_the_trailers" />

            <Button
                style="@style/review_trailer_button_style"
                android:id="@+id/readReviews"
                android:text="@string/read_review_button_text" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>